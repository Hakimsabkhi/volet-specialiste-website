---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import TelMob from '~/components/widgets/telMob.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hakim from '~/components/widgets/Hakim.astro';
import HakimMobi from '~/components/widgets/HakimMobi.astro';

const metadata = {
  title: 'Révolution des Volets Roulants: Guide Complet et Perspectives Innovantes par Volet Spécialiste',
  description:
    'Explorez les perspectives uniques sur les volets roulants avec Volet Spécialiste! Découvrez la sécurité, l’esthétique et les innovations pour un habitat amélioré.',
  ignoreTitleTemplate: true,
